<!-- Skrip dari AdminLTE dan Bootstrap -->
<script src="/plugins/jquery/jquery.min.js"></script>

<script>
    $(document).ready(function() {
        // Panggil list dengan filter jika ada
        list();

        // Toggle filter
        $("#filter-btn").click(function() {
            $("#filter").slideToggle();
        });

        // Fungsi untuk mengambil data dengan filter
        $("#filterButton").on("click", function() {
            const tahunSelected = $("#tahunSelect").val();
            const selectedKelas = $("#kelasSelect").val();
            const genderSelect = $("#genderSelect").val();
            const dateSelect = $("#dateSelect").val();
            const siswaSelect = $("#siswaSelect").val();
            const alamatSelect = $("#alamatSelect").val();
            const waliSelect = $("#waliSelect").val();
            const pekerjaanSelect = $("#pekerjaanSelect").val();
            
            let params = [];
            
            // Menyimpan filter ke localStorage untuk referensi lainnya
            localStorage.setItem("tahunSelect", tahunSelected);
            localStorage.setItem("kelasSelect", selectedKelas);
            localStorage.setItem("genderSelect", genderSelect);

            // Cek dan tambahkan parameter filter jika ada
            if (tahunSelected && tahunSelected !== "semua") {
                params.push(`idth=${tahunSelected}`); 
            }
            if (selectedKelas && selectedKelas !== "semua") {
                params.push(`id_kelas=${selectedKelas}`); 
            }
            if (genderSelect && genderSelect !== "semua") {
                params.push(`jk=${genderSelect}`); 
            }
            if (dateSelect && dateSelect !== "") {
                params.push(`tgl_lahir=${dateSelect}`); 
            }
            if (siswaSelect && siswaSelect !== "") {
                params.push(`nama_siswa=${siswaSelect}`); 
            }
            if (alamatSelect && alamatSelect !== "") {
                params.push(`alamat=${alamatSelect}`);
            }
            if (waliSelect && waliSelect !== "") {
                params.push(`nama_wali=${waliSelect}`);
            }
            if (pekerjaanSelect && pekerjaanSelect !== "") {
                params.push(`pekerjaan_wali=${pekerjaanSelect}`);
            }

            // Gabungkan parameter jika ada filter yang dipilih
            if (params.length > 0) {
                url = "/guru/list_siswa?" + params.join("&");
            } else {
                url = "/guru/list_siswa"; // Jika tidak ada filter, URL standar
            }
            
            // Panggil fungsi list untuk menampilkan data dengan filter
            list(url);
        });

        // Fungsi untuk menampilkan list siswa
        // Fungsi untuk menampilkan list siswa
function list(url = "/guru/list_siswa") {
    let html = "";
    $.ajax({
        url: url,  // Menggunakan URL yang sudah difilter
        type: "GET",
        success: function(result) {
            const val = result.data;
            if (val.length > 0) {
                html += `<table id="example1" class="table table-bordered table-striped">`;
                html += "<thead>";
                html += "<tr>";
                html += "<th>No</th>";
                html += "<th>Nis</th>";
                html += "<th>Foto</th>";
                html += "<th>Nama Siswa</th>";
                html += "<th>Kelas</th>";
                html += "<th>Gender</th>";
                html += "<th>Tahun Ajaran</th>";
                html += "<th>Action</th>";
                html += "</tr>";
                html += "</thead><tbody>";
                $.each(val, function(index, row) {
                    const foto = row.foto ? `/images/${row.foto}` : '/icon.png';
                    html += `<tr>`;
                    html += `<td>${index + 1}</td>`;
                    html += `<td>${row.nis}</td>`;
                    html += `<td><img style="width: 100px; height: 110px; object-fit: cover;" src="${foto}" class="img-thumbnail" alt=""></td>`;
                    html += `<td>${row.nama_siswa}</td>`;
                    html += `<td>${row.nama_kelas}</td>`;
                    html += `<td>${row.jk}</td>`;
                    html += `<td>${row.nama_ajaran}</td>`;
                    html += `<td><a href="#" class="btn btn-primary info-btn" data-nis="${row.nis}"><i class="fa fa-info-circle"></i></a></td>`;
                    html += "</tr>";
                });
                html += "</tbody></table>";
            } else {
                html = "<p>No data available</p>";
            }
            $(".body").html(html);

            // Inisialisasi ulang DataTable setelah tabel dimuat
            $("#example1").DataTable({
                "responsive": true,
                "lengthChange": false,
                "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        },
        error: function(xhr, status, error) {
            console.error("AJAX Error:", status, error);
            $(".body").html("<p>Error loading data</p>");
        }
    });
}
        // Fungsi untuk menampilkan informasi detail siswa dalam modal
        $(document).on('click', '.info-btn', function() {
            const nis = $(this).data("nis");

            $.ajax({
                url: `/admin/info_siswa/${nis}`,
                method: 'GET',
                success: function(response) {
                    if (response.siswa) {
                        const data = response.siswa;
                        $('#modal-nis').text(data.nis);
                        $('#modal-nama').text(data.nama_siswa);
                        $('#modal-ajaran').text(data.nama_ajaran);
                        $('#nama').text(data.nama_siswa);
                        $('#modal-kelas').text(data.nama_kelas);
                        $('#kelas').text(data.nama_kelas);
                        $('#modal-jk').text(data.jk);
                        $('#modal-alamat').text(data.alamat);
                        $('#alamat').text(data.alamat);
                        $('#modal-wali').text(data.nama_wali);
                        $('#modal-pekerjaan').text(data.pekerjaan_wali);
                        $('#modal-tlp').text("(+62) " + data.tlp);
                        $('#fotoFp').attr('src', data.foto ? `/images/${data.foto}` : '/icon.png');
                        $('#riwayat-btn').click(function(){
                            window.location.href = `/guru/riwayat_siswa/${data.nis}`
                        })
                        $("#modal-siswa").modal("show");
                    } else {
                        alert('Data tidak ditemukan');
                    }
                },
                error: function() {
                    alert('Terjadi kesalahan saat mengambil data.');
                }
            });
        });
    });
</script>
