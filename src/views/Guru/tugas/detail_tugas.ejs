<%- include("../Componen/header") %>


<style>
    .custom-file-upload {
        display: inline-block;
        width: 250px;
        padding: 10px;
        font-size: 16px;
        color: white;
        background-color: rgb(40, 180, 40);
        border: 2px solid rgb(30, 140, 30);
        border-radius: 5px;
        text-align: center;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }
    .custom-file-upload:hover {
        background-color: rgb(50, 200, 50);
    }
    .table-striped tbody tr:nth-of-type(odd) td {
        background-color: #61d7df73;
    }
    .custom-file-upload input[type="file"] {
        display: none;
    }
    .nav-tugas-container {
        margin-top: 1rem;
    }
    .info-section {
        margin-bottom: 30px;
    }
    .info-section .info-item {
        margin-bottom: 10px;
        font-size: 1.1rem;
    }
    .file-section img,
    .file-section .file-link {
        max-width: 100%;
        border-radius: 5px;
    }
    .file-section img {
        border: 1px solid #ddd;
        padding: 5px;
        margin-top: 10px;
    }
    .file-section .file-link {
        display: inline-block;
        padding: 10px 15px;
        color: #fff;
        background-color: #007bff;
        border-radius: 5px;
        text-decoration: none;
    }
</style>

<%- include("../Componen/sidebar") %>

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6"></div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card card-outline card-info">
                        <div class="card-header">
                            <h4>Data Tugas</h4>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered table-striped table-responsive">
                                <tbody>
                                    <tr>
                                        <td style="width: 20%;">Mata Pelajaran</td>
                                        <td style="width: 1%;">:</td>
                                        <td><%= data.nama_mp %></td>
                                    </tr>
                                    <tr>
                                        <td style="width: 20%;">Guru Pengampu</td>
                                        <td style="width: 1%;">:</td>
                                        <td><%= data.nama_guru %></td>
                                    </tr>
                                    <tr>
                                        <td style="width: 20%;">Tanggal Mulai</td>
                                        <td style="width: 1%;">:</td>
                                        <td class="align-middle">
