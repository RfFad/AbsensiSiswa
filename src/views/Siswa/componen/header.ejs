  <script>
     $(window).bind('beforeunload',function(){
    $('#loading').show();
  });
  $(document).ajaxSend(function() {
    $('#loading').show();
  });
  $(document).ajaxStop(function() {
    $('#loading').hide();
  });
    $(document).ready(function(){
      notif()
      function notif(){
      let notif = ''
      $.ajax({
        url : '/siswa/data_notif',
        type : 'GET',
        success : function(result){
          var count = result.jumlahNotif
          if(count > 0){
          notif += count
          $('.notif').show();
        }else{
          $('.notif').hide()
        }
        $('.notif').text(notif)
        }
      })
    }
      $("#profile-link").click(function(){
        $("#modal-info").modal("show")
      })
      $(".close").click(function(){
        $("#modal-info").modal("hide")
      })
    const foto = "<%= rows.foto %>";
  
  
    if(!foto){
      $("#foto").attr('src', '/icon.png')
    }
    })


