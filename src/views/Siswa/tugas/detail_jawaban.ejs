<%- include("../Componen/header") %>

<style>
    .group-info {
        display: flex;
        align-items: center;
        gap: 20px;
        font-size: 20px;
    }
    .group-info label {
        width: 120px;
        font-weight: bold;
    }
    .group-info span {
        margin-right: 10px;
    }
    .container-detail {
        padding: 20px;
    }
    .header-detail {
        text-align: center;
        margin-bottom: 20px;
    }
    .header-detail h2 {
        font-weight: bold;
    }
    .profile-section {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 20px;
    }
    .profile-section img {
        width: 90px;
        height: 90px;
        border-radius: 10px;
        border: 4px solid rgb(110, 102, 102);
        object-fit: cover;
    }
    .info-section {
        margin-bottom: 30px;
    }
    .info-section .info-item {
        margin-bottom: 10px;
        font-size: 1.1rem;
    }
    .file-section img,
    .file-section .file-link {
        max-width: 100%;
        border-radius: 5px;
    }
    .file-section img {
        border: 1px solid #ddd;
        padding: 5px;
        margin-top: 10px;
    }
    .file-section .file-link {
        display: inline-block;
        padding: 10px 15px;
        color: #fff;
        background-color: #007bff;
        border-radius: 5px;
        text-decoration: none;
    }
    .custom-file-upload {
        display: none;
        width: 250px;
        padding: 10px;
        font-size: 16px;
        color: white;
        background-color: #007bff;
        border-radius: 5px;
        text-align: center;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }
    .custom-file-upload:hover {
        background-color: rgb(2, 0, 139);
    }
    .custom-file-upload input[type="file"] {
        display: none;
    }
    .text-answer {
        background: #e9ecef;
        padding: 15px;
        border-radius: 5px;
        font-size: 1.1rem;
        white-space: pre-wrap;
    }
</style>

<%- include("../Componen/sidebar") %>

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6"></div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card card-outline card-info">
                        <div class="card-header">
                            <h4>Data</h4>
                        </div>
                        <div class="container-detail">
                            <div class="header-detail">
                                <h2>Detail Jawaban Siswa</h2>
                                <p class="text-muted">Informasi tentang jawaban tugas yang telah dikirim</p>
                            </div>
                            <div class="profile-section">
                                <img src="" alt="Foto Siswa" id="studentPhoto">
                                <div class="row">
                                    <div class="col-lg-12 col-6">
                                        <div class="group-info">
                                            <label>Nama Siswa</label>
                                            <span>:</span>
                                            <span><%= data.nama_siswa %></span>
                                        </div>
                                        <div class="group-info">
                                            <label>Kelas</label>
                                            <span>:</span>
                                            <span><%= data.nama_kelas %></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="info-section">
                                <table class="table table-bordered table-striped">
                                    <tbody>
                                        <tr>
                                            <td style="width: 20%;"><strong>Mata Pelajaran</strong></td>
                                            <td style="width: 1%;">:</td>
                                            <td><span><%= data.nama_mp %></span></td>
                                        </tr>
                                        <tr>
                                            <td style="width: 20%;"><strong>Tanggal Pengumpulan</strong></td>
                                            <td style="width: 1%;">:</td>
                                            <td><span><%= data.tanggal_pengumpulan.toLocaleDateString('id-ID').split('/').join('-') %></span></td>
                                        </tr>
                                        <tr>
                                            <td style="width: 20%;"><strong>Nilai</strong></td>
                                            <td style="width: 1%;">:</td>
                                            <td><span><%= data.nilai %></span></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <form id="updateForm" enctype="multipart/form-data">
                                <div class="file-section">
                                    <h5>File Tugas</h5>
                                    <div class="file-content">
                                        <img src="/file_jawaban/<%= data.file_jawaban %>" alt="File Tugas" id="taskFileImage" class="img-fluid">
                                    </div>
                                </div>
                                <label class="custom-file-upload mb-3" id="file-edit">
                                    <i class="fas fa-file"></i>
                                    Masukan file tugas disini
                                    <input type="file" name="file_jawaban">
                                </label>
                                <div class="text-answer mt-4">
                                    <h5><%- data.text_jawaban %></h5>
                                </div>
                                <div class="text-edit" style="display: none;">
                                    <textarea id="summernote" name="text_jawaban"><%- data.text_jawaban %></textarea>
                                </div>
                                <button type="button" class="btn btn-success btn-edit mt-3">Edit jawaban</button>
                                <div id="action-buttons" style="margin-top: 20px; display: none;">
                                    <button type="submit" form="updateForm" class="btn btn-primary btn-submit">Submit</button>
                                    <button type="button" class="btn btn-danger btn-cancel">Batal</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        $(".btn-edit").on("click", function() {
            $(".text-answer").hide();
            $(".text-edit").show();
            $(".file-section").hide();
            $("#file-edit").show();
            $(".btn-edit").hide();
            $("#action-buttons").show();
        });

        $(".btn-cancel").on("click", function() {
            $(".text-answer").show();
            $(".text-edit").hide();
            $(".file-section").show();
            $("#file-edit").hide();
            $(".btn-edit").show();
            $("#action-buttons").hide();
        });

        $("#updateForm").on('submit', function(event) {
            event.preventDefault();
            const id_pengumpulan = "<%= data.id_pengumpulan %>";
            let formData = new FormData(this);
            $.ajax({
                url: `/siswa/update_jawaban/${id_pengumpulan}`,
                type: 'POST',
                data: formData,
                contentType: false,
                processData: false,
                success: function(response) {
                    Swal.fire({
                        title: "Berhasil",
                        text: response.message,
                        icon: "success",
                        timer: 2000,
                        showConfirmButton: false,
                    }).then(() => {
                        location.reload();
                    });
                },
                error: function() {
                    Swal.fire({
                        title: "Gagal",
                        text: "Terjadi kesalahan saat memperbarui jawaban.",
                        icon: "error",
                    });
                }
            });
        });

        const file = "<%= data.file_jawaban %>";
        if (!file || file === "null") {
            $("#taskFileImage").hide();
            $(".file-content").html("<div id='callout-info' class='alert alert-warning mt-3'>Anda tidak mengirimkan file</div>");
        }

        function foto() {
            const foto = "<%= data.foto %>";
            if (!foto || foto === "null") {
                $("#studentPhoto").attr('src', '/icon.png');
            } else {
                $("#studentPhoto").attr('src', `/images/${foto}`);
            }
        }
        foto();
    });
</script>

