<%- include("../../Componen/header") %>
<title>Admin | Create Riwayat</title>
<%- include("../../Componen/sideNavbar") %>


<div class="content-wrapper">
<div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>Insert Data</h1>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">DataTable with minimal features & hover style</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <% if (messages.success) { %>
                <div class="alert alert-success">
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <%= messages.success %>
                </div>
            <% } %>
            <% if (messages.error) { %>
              <div class="alert alert-danger">
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <%= messages.error %>
                </div>
            <% } %>
           
              <form action="/admin/insert_riwayat" method="post">
                <div class="row">
                  <div class="col-md-6">
                    <label for="nama_siswa">Nama Siswa</label>
                <div class="form-group mb-3">
                    <input type="text" class="form-control" name="nama_siswa" placeholder="Masukkan nama riwayat" required>
                </div>
                  </div>
                  <div class="col-md-6">
                
                <label for="prestasi">Prestasi</label>
                <div class="form-group mb-3">
                    <input type="text" class="form-control" name="prestasi" placeholder="Masukkan Prestasi" required>
                </div>
                <label for="pelanggaran">Pelanggaran</label>
                <div class="form-group mb-3">
                    <input type="text" class="form-control" name="pelanggaran" placeholder="Masukkan pelanggaran" required>
                </div>
                  </div>
                </div>
                <button type="submit" class="btn btn-primary">Tambahkan Data</button>
              </form>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
      </div>
    </div>
  </section>
  
</div>

<%- include("../../Componen/footer") %>
