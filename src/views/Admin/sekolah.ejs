<%- include("../Componen/header") %>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Mochiy+Pop+One&display=swap" rel="stylesheet">
<title>Admin | Create Guru</title>
<style>
.sekolah {
    width: 100%;
    height: 50px;
    background-color: #ffffff;
    border-radius: 5px;
    display: flex; /* Menjadikan elemen sebagai kontainer flexbox */
    align-items: center; /* Menengahkan teks secara vertikal */
    justify-content: center; /* Menengahkan teks secara horizontal */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

.sekolah p {
    font-family: "Mochiy Pop One", sans-serif;
    margin: 0; /* Menghilangkan margin default pada <p> */
}

</style>
<%- include("../Componen/sideNavbar") %>


<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1 class="m-0">Bio sekolah</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                <li class="breadcrumb-item active">Bio sekolah</li>
              </ol>
            </div><!-- /.col -->
          </div><!-- /.row -->
        </div><!-- /.container-fluid -->
      </div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="sekolah mb-3">
                
                <p><%= row.nama %></p>
            </div>
            <div class="sekolah">
                <p><%= row.kode %></p>
            </div>
           
        </div>
        <div class="col-md-6">
            <div class="sekolah mb-3">
                <p><%= row.email %></p>
            </div>
            <div class="sekolah">
                <p><%= row.alamat %></p>
            </div>
        </div>
    </div>
    <a href="/admin/sekolah/edit/1" class="btn btn-warning mt-3" style="width: 130px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);  font-family: Mochiy Pop One, sans-serif;">Edit Bio</a>
    </div>
  </section>
  
</div>

<%- include("../Componen/footer") %>
