<%- include("../Componen/header") %>
<title>Davice | Ralan</title>
<%- include("../Componen/sideNavbar") %>

<div class="content-wrapper">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>DataTables</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">DataTables</li>
        </ol>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">DataTable with minimal features & hover style</h3>
          </div>
          <!-- /.card-header -->
          
          <div class="card-body">
            <div class="d-flex flex-column flex-md-row justify-content-between mb-2">
              <a href="/admin/guru" class="btn btn-success mb-2 mb-md-0" style="height: 35px;">Tambahkan Data +</a>
              <div class="d-flex justify-content-end">
                <input type="text" class="form-control" style="width: 160px;">
                <button type="submit" class="btn btn-secondary ml-2" style="height: 35px;">Search</button>
              </div>
            </div>
            
            <div class="table-responsive">
              <table id="example2" class="table table-bordered table-hover">
                <thead>
                  <tr>
                    <th style="width: 1%;">No</th>
                    <th>Nip</th>
                    <th>Nama Guru</th>
                    <th>Gender</th>
                    <th>Jabatan</th>
                    <th>Alamat</th>
                  </tr>
                </thead>
                <tbody>
                  <% row.forEach((rowItem, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= rowItem.nip %></td>
                    <td><%= rowItem.nama_guru %></td>
                    <td><%= rowItem.jk %></td>
                    <td><%= rowItem.jabatan %></td>
                    <td><%= rowItem.alamat %></td>
                  </tr>
                  <% }) %>
                </tbody>
                <tfoot>
                  <tr>
                    <th>No</th>
                    <th>Nip</th>
                    <th>Nama Guru</th>
                    <th>Gender</th>
                    <th>Jabatan</th>
                    <th>Alamat</th>
                  </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.table-responsive -->
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
    </div>
  </div>
</section>

</div>

<%- include("../Componen/footer") %>
